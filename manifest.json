{
  "manifest_version": 3,
  "name": "Headout Bridge",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": [
    "*://hub.headout.com/*",
    "*://*.ingressocomdesconto.com.br/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://hub.headout.com/*"],
      "js": ["headout_content.js"]
    },
    {
      "matches": ["*://*.ingressocomdesconto.com.br/*"],
      "js": ["ingresso_content.js"],
      "all_frames": true
    }
  ]
}